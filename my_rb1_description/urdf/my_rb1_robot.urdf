<?xml version="1.0"?>
<robot name="my_rb1_robot">

    <!-- Gazebo Plugin's -->
    <!-- Gazebo Diferenctial Driver Controler Plugin -->
    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <updateRate>20</updateRate>
            <leftJoint>left_wheel_joint</leftJoint>
            <rightJoint>right_wheel_joint</rightJoint>
            <wheelSeparation>0.4</wheelSeparation>
            <wheelDiameter>0.05</wheelDiameter>
            <torque>10</torque>
            <commandTopic>cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>base_footprint</robotBaseFrame>
        </plugin>
    </gazebo>

    <!-- Gazebo tags - Laser scan -->
    <gazebo reference="front_laser">
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>20</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle>
                        <max_angle>1.570796</max_angle>
                    </horizontal>
                </scan>
            <range>
                <min>0.20</min>
                <max>10.0</max>
                <resolution>0.01</resolution>
            </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>/scan</topicName>
                <frameName>sensor_laser</frameName>
            </plugin>
        </sensor>
    </gazebo>
    
    <!-- Gazebo Color Reference -->
    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="left_wheel">
        <material>Gazebo/Grey</material>
    </gazebo>
    <gazebo reference="right_wheel">
        <material>Gazebo/Grey</material>
    </gazebo>
    <gazebo reference="front_caster">
        <material>Gazebo/Grey</material>
    </gazebo>
    <gazebo reference="back_caster">
        <material>Gazebo/Grey</material>
    </gazebo>
    <!-- END OF PLUGIN -->


    <!-- Base Footprint -->
    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </joint>

    <!--Front Laser Link-->
    <link name="base_footprint">
    </link>

    <!-- Base Link -->
    <link name="base_link">
        <inertial>
            <mass value="25"/>
            <inertia ixx="0.57815" ixy="0" ixz="0" iyy="0.57815" iyz="0" izz="0.78125"/>
        </inertial>

        <!--Chassis-->
        <visual>
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
            </geometry>
            <material name="DarkBlue">
                <color rgba="0.2 0.2 0.4 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
            </geometry>
        </collision>
    </link>
    
    <!-- WHEEL'S -->
    <!-- Left Wheel -->
    <!-- Left Wheel Joint -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 -0.2 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Left Wheel Link -->
    <link name="left_wheel">
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.00036458333" ixy="0" ixz="0" iyy="0.00036458333" iyz="0" izz="0.0003125"/>
        </inertial>
        <!--Wheel-->
        <visual>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.025"/>
            </geometry>
        </collision>
    </link>

    <!-- Right Wheel -->
    <!-- Right Wheel Joint -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 0.2 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    
     <!-- Right Wheel Link -->
    <link name="right_wheel">
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.00036458333" ixy="0" ixz="0" iyy="0.00036458333" iyz="0" izz="0.0003125"/>
        </inertial>

        <!--Wheel-->
        <visual>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.025"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1"/>
            </material>
        </collision>
    </link>
    <!-- END OF WHEEL'S -->

    <!-- CASTER -->
    <!--Front Caster Joint-->
    <joint name="front_caster_joint" type="fixed">
        <parent link="base_link"/>
        <child link="front_caster"/>
        <origin xyz="0.1 0.0 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <joint_properties friction="0.0"/>
    </joint>

     <!--Front Caster Link-->
    <link name="front_caster">
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.00225" ixy="0" ixz="0" iyy="0.00225" iyz="0" izz="0.00225"/>
        </inertial>

        <!-- Caster Wheel Soport-->
        <visual>
            <origin xyz="0 0 0.05" rpy="1.5707 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="Violet">
                <color rgba="0.105 0 0.165 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="1.5707 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <!-- Caster wheel-->
        <visual>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="Grey">
                <color rgba="0.6 0.6 0.6 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
    </link>

    <!--Back Caster Joint-->
    <joint name="back_caster_joint" type="fixed">
        <parent link="base_link"/>
        <child link="back_caster"/>
        <origin xyz="-0.1 0.0 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <joint_properties friction="0.0"/>
    </joint>

    <!-- Back Caster Link -->
    <link name="back_caster">
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.00225" ixy="0" ixz="0" iyy="0.00225" iyz="0" izz="0.00225"/>
        </inertial>

        <!-- Caster Wheel Soport-->
        <visual>
            <origin xyz="0 0 0.05" rpy="1.5707 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="Violet">
                <color rgba="0.105 0 0.165 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="1.5707 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <!-- Caster wheel-->
        <visual>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="Grey">
                <color rgba="0.6 0.6 0.6 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
    </link>
    <!-- END OF CASTER WHHELS -->

    <!-- LASER -->
    <!--Front Laser Joint-->
    <joint name="front_laser_joint" type="fixed">
        <parent link="base_link"/>
        <child link="front_laser"/>
        <origin xyz="0.25 0 0.075" rpy="3.141592654 0 0"/>
        <axis xyz="1 0 0 "/>
    </joint>

    <!--Front Laser Link-->
    <link name="front_laser">
    </link>
    <!--END of LASER-->

</robot>   